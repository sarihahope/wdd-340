<div class="registration">
    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else {
          res.redirect('/')
        } %>


        
 <div class="reg-div">
  <form class="form-register" action="/account/register" method="post">
    <label for="account_firstname">First name:</label><br>
    <input type="text" id="firstname" name="account_firstname" required><br><br>
    <label for="account_lastname">Last name:</label><br>
    <input type="text" id="lastname" name="account_lastname" required><br><br>
    <label for="account_email">Email:</label><br>
    <input type="email" id="fname" name="account_email" required><br><br>
    <label for="account_password">Password:</label><br>
    <p>At least 12 characters, 1 number, 1 capital letter and 1 special character</p>
    <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br><br>
    <button type="submit" class="btnSubmit">Register</button>

    <div class="login">
        <p>Already have an account? <a href="/account/login">Login</a></p>
      </form>
    </div>  
</div>

