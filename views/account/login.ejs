<div class="accountLogin">

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <% if (errors) { %>
        <ul class="login-error">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul><br>
      <% } %>
</div>
<div class="login">
  <form class="form-login" action="/account/login" method="post">
      <div class="login-div">
          <label for="account_email">Login:</label><br>
          <input type="email" id="account_email" name="account_email" required><br><br>
          <label for="account_password">Password:</label><br>
          <input type="password" id="account_password" name="account_password" required>
          <br><br>
      </div>

        <button type="submit" class="btnSubmit">Submit</button>


<div class="register">
    <p>No account? <a href="/account/register">Sign-Up</a></p>

</div>
</form>
</div>