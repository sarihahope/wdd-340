
<div class="addClassification">
    <% if (title) { %>
        <h1><%= title %></h1>
        <% } else {
          res.redirect('/')
        } %>

</div>
<%- messages() %>

<div class="errormessage">
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>

<!-- Form for adding a classification to database -->
 <div class="classificationform">
  <form action="/inventory/add-classification" method="post">
      <div class="form-group">
          <label for="classification">Classification</label>
          <input type="text" id="classification_name" name="classification_name" required value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"><br><br>
      </div>
  </form>
  <button type="submit" class="btn btn-primary">Add Classification</button>
  
<label><a href="/inv" id="return_management">Back to Management </a> </label>  

</div>







